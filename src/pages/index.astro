    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-20 bg-secondary text-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Serving Volusia County</h2>
        <p class="text-gray-300">Professional concrete services throughout the area</p>
      </div>
      <div class="flex flex-wrap justify-center gap-4">
        {site.serviceAreas.map(area => (
          <span class="bg-white/10 px-6 py-2 rounded-full text-sm font-medium">{area}</span>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-primary to-primary-dark text-white text-center">
    <div class="max-w-4xl mx-auto px-4">
