---
import BaseLayout from '../layouts/BaseLayout.astro';
import { site, reviews, locations } from '../data/site';

const schema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": `${site.url}/#business`,
  "name": site.name,
  "telephone": site.phone,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": site.address.street,
    "addressLocality": site.address.city,
    "addressRegion": site.address.state,
    "postalCode": site.address.zip,
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": site.geo.lat,
    "longitude": site.geo.lng
  },
  "url": site.url,
  "priceRange": "$$",
  "openingHours": site.hours.schema,
  "areaServed": site.serviceAreas.map(area => ({ "@type": "City", "name": area })),
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": site.stats.rating,
    "reviewCount": site.stats.reviewCount,
    "bestRating": "5",
    "worstRating": "1"
  },
  "review": reviews.slice(0, 5).map(r => ({
    "@type": "Review",
    "author": { "@type": "Person", "name": r.name },
    "datePublished": r.date,
    "reviewRating": { "@type": "Rating", "ratingValue": r.rating.toString() },
    "reviewBody": r.text
  })),
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Concrete Services",
    "itemListElement": site.services.map(s => ({
      "@type": "Offer",
      "itemOffered": { "@type": "Service", "name": s.name }
    }))
  },
  "description": site.description
};
---

<BaseLayout 
  title={site.title}
  description={site.description}
  canonical="/"
  schema={schema}
>
  <!-- Hero Section with Form Above Fold -->
  <section class="bg-gradient-to-br from-secondary-dark via-secondary to-secondary-light relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.4\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 py-12 md:py-20 relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <!-- Left Column - Content -->
        <div class="text-white">
          <!-- Urgency Badge -->
          <div class="inline-flex items-center gap-2 bg-accent/20 border border-accent/40 px-4 py-2 rounded-full text-accent text-sm font-semibold mb-6 animate-pulse-slow">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg>
            <span>Limited Availability – Book Your Free Estimate Today</span>
          </div>
          
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-black mb-6 leading-tight">
            Port Orange's <span class="text-primary">Most Trusted</span> Concrete Contractors
          </h1>
          
          <p class="text-xl text-gray-300 mb-8 leading-relaxed">
            From driveways to patios, slabs to stamped concrete – we deliver <strong class="text-white">quality craftsmanship</strong> that lasts decades. Proudly serving Volusia County for over 20 years.
          </p>
          
          <!-- Trust Badges -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 text-center border border-white/10">
              <div class="text-3xl font-black text-primary">{site.stats.yearsExperience}</div>
              <div class="text-xs text-gray-300 mt-1">Years Experience</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 text-center border border-white/10">
              <div class="text-3xl font-black text-accent">{site.stats.projectsCompleted}</div>
              <div class="text-xs text-gray-300 mt-1">Projects Done</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 text-center border border-white/10">
              <div class="text-3xl font-black text-trust">{site.stats.rating}</div>
              <div class="text-xs text-gray-300 mt-1">Star Rating</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 text-center border border-white/10">
              <div class="text-3xl font-black text-white">100%</div>
              <div class="text-xs text-gray-300 mt-1">Satisfaction</div>
            </div>
          </div>

          <!-- Trust Elements -->
          <div class="flex flex-wrap gap-4 text-sm">
            <div class="flex items-center gap-2 text-gray-300">
              <svg class="w-5 h-5 text-trust" fill="currentColor" viewBox="0 0 24 24"><path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/></svg>
              Licensed & Insured
            </div>
            <div class="flex items-center gap-2 text-gray-300">
              <svg class="w-5 h-5 text-trust" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
              Free Estimates
            </div>
            <div class="flex items-center gap-2 text-gray-300">
              <svg class="w-5 h-5 text-trust" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
              Quality Guaranteed
            </div>
            <div class="flex items-center gap-2 text-gray-300">
              <svg class="w-5 h-5 text-trust" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
              Local Family Business
            </div>
          </div>
          
          <!-- Mobile CTA -->
          <div class="mt-8 lg:hidden">
            <a href={site.phoneLink} class="flex items-center justify-center gap-3 bg-gradient-to-r from-primary to-primary-dark text-white px-8 py-4 rounded-xl text-xl font-bold shadow-xl shadow-primary/30 w-full">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
              Call Now: {site.phone}
            </a>
          </div>
        </div>
        
        <!-- Right Column - Form -->
        <div class="bg-white rounded-2xl p-6 md:p-8 shadow-2xl relative">
          <!-- Form Header -->
          <div class="text-center mb-6">
            <div class="inline-flex items-center gap-2 bg-trust/10 text-trust px-3 py-1 rounded-full text-xs font-semibold mb-3">
              <span class="w-2 h-2 bg-trust rounded-full animate-pulse"></span>
              Fast Response • Usually Within 1 Hour
            </div>
            <h2 class="text-2xl md:text-3xl font-bold text-secondary-dark">Get Your FREE Quote</h2>
            <p class="text-gray-500 text-sm mt-2">No obligation • Takes 30 seconds</p>
          </div>
          
          <!-- GHL Form Embed -->
          <iframe 
            src="https://api.leadconnectorhq.com/widget/survey/J563qSsU4L7hu5RP6da1" 
            style="width:100%;height:480px;border:none;"
            title="Get a Free Quote"
          ></iframe>
          
          <!-- Trust Footer -->
          <div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-center gap-4 text-xs text-gray-400">
            <span class="flex items-center gap-1">
              <svg class="w-4 h-4 text-trust" fill="currentColor" viewBox="0 0 24 24"><path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/></svg>
              Your info is secure
            </span>
            <span>•</span>
            <span>No spam, ever</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Proof Bar -->
  <section class="bg-gray-50 py-6 border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex flex-wrap justify-center items-center gap-6 md:gap-12">
        <div class="flex items-center gap-3">
          <div class="flex -space-x-2">
            {reviews.slice(0, 4).map((r, i) => (
              <div class="w-10 h-10 rounded-full border-2 border-white flex items-center justify-center text-white text-sm font-bold" style={`background-color: ${r.color}; z-index: ${4-i}`}>
                {r.name.charAt(0)}
              </div>
            ))}
          </div>
          <div>
            <div class="flex items-center gap-1">
              <span class="text-accent font-bold">★★★★★</span>
              <span class="font-semibold">{site.stats.rating}</span>
            </div>
            <div class="text-xs text-gray-500">{site.stats.reviewCount} verified reviews</div>
          </div>
        </div>
        <div class="hidden md:block h-10 w-px bg-gray-300"></div>
        <div class="flex items-center gap-2 text-sm">
          <svg class="w-5 h-5 text-trust" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
          <span class="font-medium">BBB Accredited</span>
        </div>
        <div class="hidden md:block h-10 w-px bg-gray-300"></div>
        <div class="flex items-center gap-2 text-sm">
          <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24"><path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/></svg>
          <span class="font-medium">Fully Licensed & Insured</span>
        </div>
        <div class="hidden md:block h-10 w-px bg-gray-300"></div>
        <div class="flex items-center gap-2 text-sm">
          <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 24 24"><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg>
          <span class="font-medium">{site.stats.yearsExperience} Years in Business</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-16">
        <span class="text-primary font-semibold text-sm uppercase tracking-wider">Why Port Orange Trusts Us</span>
        <h2 class="text-3xl md:text-4xl font-bold mt-2 mb-4">The Port Orange Concrete Difference</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">When you choose Port Orange Concrete Co., you're getting more than just a contractor – you're getting a team that treats your property like our own.</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center group">
          <div class="w-20 h-20 bg-gradient-to-br from-primary/10 to-primary/5 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-10 h-10 text-primary" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Local Expertise</h3>
          <p class="text-gray-600 text-sm">We understand Volusia County's unique soil conditions, weather patterns, and building requirements. Our work is designed for Florida.</p>
        </div>
        
        <div class="text-center group">
          <div class="w-20 h-20 bg-gradient-to-br from-accent/10 to-accent/5 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-10 h-10 text-accent" fill="currentColor" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
          </div>
          <h3 class="text-xl font-bold mb-3">5-Star Quality</h3>
          <p class="text-gray-600 text-sm">Over {site.stats.reviewCount} homeowners have trusted us with their projects. Our 5-star rating reflects our commitment to excellence.</p>
        </div>
        
        <div class="text-center group">
          <div class="w-20 h-20 bg-gradient-to-br from-trust/10 to-trust/5 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-10 h-10 text-trust" fill="currentColor" viewBox="0 0 24 24"><path d="M19 3h-4.18C14.4 1.84 13.3 1 12 1c-1.3 0-2.4.84-2.82 2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 0c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm-2 14l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/></svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Transparent Pricing</h3>
          <p class="text-gray-600 text-sm">No hidden fees or surprise charges. You get a detailed written quote upfront so you know exactly what to expect.</p>
        </div>
        
        <div class="text-center group">
          <div class="w-20 h-20 bg-gradient-to-br from-secondary/10 to-secondary/5 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-10 h-10 text-secondary" fill="currentColor" viewBox="0 0 24 24"><path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/></svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Quality Guaranteed</h3>
          <p class="text-gray-600 text-sm">We stand behind every pour. If there's ever an issue with our work, we'll make it right – that's our promise.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-16">
        <span class="text-primary font-semibold text-sm uppercase tracking-wider">What We Do</span>
        <h2 class="text-3xl md:text-4xl font-bold mt-2 mb-4">Professional Concrete Services</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">From residential driveways to commercial foundations, we have the expertise and equipment to handle projects of any size.</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {site.services.map(service => (
          <a href={`/${service.slug}/`} class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 group border border-gray-100">
            <div class="h-48 bg-gradient-to-br from-secondary to-secondary-dark flex items-center justify-center relative overflow-hidden">
              <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/20 transition-colors duration-300"></div>
              <svg class="w-20 h-20 text-primary/80 group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24"><path d="M19 12h-2v3h-3v2h5v-5zM7 9h3V7H5v5h2V9zm14-6H3c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16.01H3V4.99h18v14.02z"/></svg>
            </div>
            <div class="p-6">
              <div class="flex items-center justify-between mb-2">
                <h3 class="text-xl font-bold group-hover:text-primary transition">{service.name}</h3>
                <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full font-medium">{service.priceRange}</span>
              </div>
              <p class="text-gray-600 text-sm mb-4">{service.description}</p>
              <span class="text-primary font-semibold text-sm flex items-center gap-1 group-hover:gap-2 transition-all">
                Learn More 
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-16">
        <span class="text-primary font-semibold text-sm uppercase tracking-wider">Simple Process</span>
        <h2 class="text-3xl md:text-4xl font-bold mt-2 mb-4">How It Works</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">We make getting quality concrete work easy. From your first call to project completion, here's what to expect.</p>
      </div>
      
      <div class="grid md:grid-cols-4 gap-8 relative">
        <!-- Connecting Line (desktop) -->
        <div class="hidden md:block absolute top-16 left-[12.5%] right-[12.5%] h-1 bg-gradient-to-r from-primary via-accent to-trust rounded-full"></div>
        
        <div class="text-center relative">
          <div class="w-16 h-16 bg-gradient-to-br from-primary to-primary-dark text-white rounded-2xl flex items-center justify-center text-2xl font-black mx-auto mb-6 relative z-10 shadow-lg shadow-primary/30">1</div>
          <h3 class="text-xl font-bold mb-3">Call or Request Quote</h3>
          <p class="text-gray-600 text-sm">Give us a call at {site.phone} or fill out our quick online form. We'll discuss your project needs and answer any questions.</p>
        </div>
        
        <div class="text-center relative">
          <div class="w-16 h-16 bg-gradient-to-br from-accent-warm to-accent text-white rounded-2xl flex items-center justify-center text-2xl font-black mx-auto mb-6 relative z-10 shadow-lg shadow-accent/30">2</div>
          <h3 class="text-xl font-bold mb-3">Free On-Site Estimate</h3>
          <p class="text-gray-600 text-sm">We'll schedule a convenient time to visit your property, assess the project, and provide a detailed written quote on the spot.</p>
        </div>
        
        <div class="text-center relative">
          <div class="w-16 h-16 bg-gradient-to-br from-trust to-green-600 text-white rounded-2xl flex items-center justify-center text-2xl font-black mx-auto mb-6 relative z-10 shadow-lg shadow-trust/30">3</div>
          <h3 class="text-xl font-bold mb-3">Expert Installation</h3>
          <p class="text-gray-600 text-sm">Our experienced crew arrives on schedule with professional equipment. We handle everything – prep, pour, and finish.</p>
        </div>
        
        <div class="text-center relative">
          <div class="w-16 h-16 bg-gradient-to-br from-secondary to-secondary-dark text-white rounded-2xl flex items-center justify-center text-2xl font-black mx-auto mb-6 relative z-10 shadow-lg shadow-secondary/30">4</div>
          <h3 class="text-xl font-bold mb-3">Enjoy for Decades</h3>
          <p class="text-gray-600 text-sm">We clean up thoroughly and walk you through proper curing. Your new concrete will look great and last 25-30+ years.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Reviews Section -->
  <section class="py-20 bg-secondary-dark text-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-16">
        <span class="text-primary font-semibold text-sm uppercase tracking-wider">Testimonials</span>
        <h2 class="text-3xl md:text-4xl font-bold mt-2 mb-4">What Volusia County Homeowners Say</h2>
        <div class="inline-flex items-center gap-3 bg-white/10 px-6 py-3 rounded-full mt-4">
          <span class="text-accent text-xl">★★★★★</span>
          <span class="font-bold">{site.stats.rating} Average Rating</span>
          <span class="text-gray-400">•</span>
          <span class="text-gray-300">{site.stats.reviewCount} Reviews</span>
        </div>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {reviews.slice(0, 8).map(review => (
          <div class="bg-white/5 backdrop-blur-sm p-6 rounded-2xl border border-white/10 hover:bg-white/10 transition">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 rounded-full flex items-center justify-center text-white text-lg font-bold" style={`background-color: ${review.color}`}>
                {review.name.charAt(0)}
              </div>
              <div>
                <div class="font-semibold">{review.name}</div>
                <div class="text-xs text-gray-400">{review.location}</div>
              </div>
            </div>
            <div class="text-accent text-sm mb-3">★★★★★</div>
            <p class="text-gray-300 text-sm leading-relaxed">"{review.text}"</p>
            <div class="mt-4 pt-4 border-t border-white/10 text-xs text-gray-500">{review.service} • Verified Customer</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Detailed Content Section (SEO) -->
  <section class="py-20">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center">Your Trusted Concrete Contractors in Port Orange, Florida</h2>
      
      <div class="prose prose-lg max-w-none text-gray-600">
        <p>Welcome to Port Orange Concrete Co., Volusia County's premier concrete contracting company. For over two decades, we've been the go-to choice for homeowners and businesses throughout the greater Daytona Beach area who demand quality concrete work that stands the test of time.</p>
        
