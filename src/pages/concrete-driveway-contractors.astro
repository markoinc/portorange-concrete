        {reviews.slice(0, 3).map(review => (
          <div class="bg-white p-6 rounded-xl shadow-sm border">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold" style={`background-color: ${review.color}`}>
                {review.name.charAt(0)}
              </div>
              <div>
                <div class="font-semibold">{review.name}</div>
                <div class="text-sm text-gray-500">{review.location}</div>
              </div>
            </div>
            <div class="text-accent mb-3">★★★★★</div>
            <p class="text-gray-600 text-sm">"{review.text}"</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Other Services -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-2xl font-bold mb-8 text-center">Our Other Concrete Services</h2>
      <div class="grid md:grid-cols-4 gap-6">
