---
import { site } from '../data/site';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  schema?: object;
}

const { title, description, canonical = Astro.url.pathname, schema } = Astro.props;
const fullUrl = `${site.url}${canonical}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={fullUrl}>
  
  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:url" content={fullUrl}>
  <meta property="og:site_name" content={site.name}>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  {schema && (
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  )}
</head>
<body class="font-sans text-gray-800 antialiased">
  <!-- Header -->
  <header class="bg-white shadow-sm sticky top-0 z-50 border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">
      <a href="/" class="text-xl font-bold text-secondary-dark hover:text-primary transition">
        {site.shortName}
      </a>
      <nav class="hidden md:flex items-center gap-8">
        <a href="/" class="text-gray-700 hover:text-primary font-medium transition">Home</a>
        <a href="/concrete-driveway-contractors/" class="text-gray-700 hover:text-primary font-medium transition">Driveways</a>
        <a href="/concrete-patio-contractors/" class="text-gray-700 hover:text-primary font-medium transition">Patios</a>
        <a href="/concrete-slab-contractors/" class="text-gray-700 hover:text-primary font-medium transition">Slabs</a>
        <a href="/about/" class="text-gray-700 hover:text-primary font-medium transition">About</a>
        <a href="/contact/" class="text-gray-700 hover:text-primary font-medium transition">Contact</a>
      </nav>
      <a href={site.phoneLink} class="hidden md:flex items-center gap-2 bg-primary hover:bg-primary-dark text-white px-5 py-2.5 rounded-lg font-semibold transition">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
        {site.phone}
      </a>
      <button id="mobile-menu-btn" class="md:hidden p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-white border-t">
      <div class="px-4 py-4 space-y-3">
        <a href="/" class="block text-gray-700 hover:text-primary font-medium">Home</a>
        <a href="/concrete-driveway-contractors/" class="block text-gray-700 hover:text-primary font-medium">Driveways</a>
        <a href="/concrete-patio-contractors/" class="block text-gray-700 hover:text-primary font-medium">Patios</a>
        <a href="/concrete-slab-contractors/" class="block text-gray-700 hover:text-primary font-medium">Slabs</a>
        <a href="/about/" class="block text-gray-700 hover:text-primary font-medium">About</a>
        <a href="/contact/" class="block text-gray-700 hover:text-primary font-medium">Contact</a>
        <a href={site.phoneLink} class="block bg-primary text-white text-center py-3 rounded-lg font-semibold mt-4">
          Call {site.phone}
        </a>
      </div>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white pt-16 pb-8">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid md:grid-cols-4 gap-10 mb-12">
        <div>
          <h4 class="text-primary text-lg font-semibold mb-4">{site.name}</h4>
          <p class="text-gray-400 text-sm mb-4">{site.description}</p>
        </div>
        <div>
          <h4 class="text-primary text-lg font-semibold mb-4">Services</h4>
          <ul class="space-y-2">
            {site.services.map(service => (
              <li><a href={`/${service.slug}/`} class="text-gray-400 hover:text-primary text-sm transition">{service.name}</a></li>
            ))}
          </ul>
        </div>
        <div>
          <h4 class="text-primary text-lg font-semibold mb-4">Service Areas</h4>
          <ul class="space-y-2">
            <li><a href="/concrete-contractors-daytona-beach/" class="text-gray-400 hover:text-primary text-sm transition">Daytona Beach</a></li>
            <li><a href="/concrete-contractors-ormond-beach/" class="text-gray-400 hover:text-primary text-sm transition">Ormond Beach</a></li>
            <li><a href="/concrete-contractors-new-smyrna-beach/" class="text-gray-400 hover:text-primary text-sm transition">New Smyrna Beach</a></li>
            <li><a href="/concrete-contractors-deland/" class="text-gray-400 hover:text-primary text-sm transition">DeLand</a></li>
            <li><a href="/locations/" class="text-gray-400 hover:text-primary text-sm transition">All Locations â†’</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-primary text-lg font-semibold mb-4">Contact</h4>
          <div class="space-y-3 text-sm text-gray-400">
            <p class="flex items-start gap-2">
              <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/></svg>
              {site.address.full}
            </p>
            <p class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
              <a href={site.phoneLink} class="hover:text-primary transition">{site.phone}</a>
            </p>
            <p class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
              {site.hours.display}
            </p>
          </div>
        </div>
      </div>
      <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
        <p>&copy; {new Date().getFullYear()} {site.name}. All rights reserved.</p>
        <div class="flex gap-4 mt-4 md:mt-0">
          <a href="/privacy/" class="hover:text-primary transition">Privacy Policy</a>
          <a href="/terms/" class="hover:text-primary transition">Terms of Service</a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Sticky Mobile CTA -->
  <div class="fixed bottom-0 left-0 right-0 bg-primary p-3 md:hidden z-50 shadow-lg">
    <a href={site.phoneLink} class="flex items-center justify-center gap-3 text-white font-bold text-lg">
      <svg class="w-6 h-6 animate-pulse" fill="currentColor" viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
      Call Now: {site.phone}
    </a>
  </div>

  <script>
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    btn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
  </script>
</body>
</html>
