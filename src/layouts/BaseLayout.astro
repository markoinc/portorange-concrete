---
import { site } from '../data/site';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  schema?: object;
}

const { title, description, canonical = Astro.url.pathname, schema } = Astro.props;
const fullUrl = `${site.url}${canonical}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={fullUrl}>
  
  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:url" content={fullUrl}>
  <meta property="og:site_name" content={site.name}>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  {schema && (
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  )}
</head>
<body class="font-sans text-gray-800 antialiased">
  <!-- Top Bar with Trust Elements -->
  <div class="bg-secondary-dark text-white text-sm py-2 hidden md:block">
    <div class="max-w-7xl mx-auto px-4 flex justify-between items-center">
      <div class="flex items-center gap-6">
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
          Licensed & Insured
        </span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-accent" fill="currentColor" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
          5-Star Rated ({site.stats.reviewCount} Reviews)
        </span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-trust" fill="currentColor" viewBox="0 0 24 24"><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg>
          {site.stats.yearsExperience} Years Experience
        </span>
      </div>
      <div class="flex items-center gap-4">
        <span>{site.hours.display}</span>
      </div>
    </div>
  </div>

  <!-- Header -->
  <header class="bg-white shadow-sm sticky top-0 z-50 border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">
      <a href="/" class="flex items-center gap-2">
        <div class="w-10 h-10 bg-gradient-to-br from-primary to-primary-dark rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M19 12h-2v3h-3v2h5v-5zM7 9h3V7H5v5h2V9zm14-6H3c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16.01H3V4.99h18v14.02z"/></svg>
        </div>
        <div class="hidden sm:block">
          <div class="text-lg font-bold text-secondary-dark leading-tight">{site.shortName}</div>
          <div class="text-xs text-gray-500">Volusia County, FL</div>
        </div>
      </a>
      
      <nav class="hidden lg:flex items-center gap-6">
        <a href="/" class="text-gray-700 hover:text-primary font-medium transition">Home</a>
        <div class="relative group">
          <button class="text-gray-700 hover:text-primary font-medium transition flex items-center gap-1">
            Services
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
          </button>
          <div class="absolute top-full left-0 bg-white shadow-lg rounded-lg py-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            {site.services.map(service => (
              <a href={`/${service.slug}/`} class="block px-4 py-2 text-gray-700 hover:bg-primary/10 hover:text-primary transition">{service.name}</a>
            ))}
          </div>
        </div>
        <a href="/locations/" class="text-gray-700 hover:text-primary font-medium transition">Areas We Serve</a>
        <a href="/about/" class="text-gray-700 hover:text-primary font-medium transition">About</a>
        <a href="/contact/" class="text-gray-700 hover:text-primary font-medium transition">Contact</a>
      </nav>
      
      <div class="flex items-center gap-3">
        <a href={site.phoneLink} class="hidden md:flex items-center gap-2 bg-gradient-to-r from-primary to-primary-dark hover:from-primary-dark hover:to-primary text-white px-5 py-2.5 rounded-lg font-bold transition shadow-lg shadow-primary/20">
          <svg class="w-5 h-5 animate-pulse" fill="currentColor" viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
          {site.phone}
        </a>
        <button id="mobile-menu-btn" class="lg:hidden p-2 hover:bg-gray-100 rounded-lg transition">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden lg:hidden bg-white border-t">
      <div class="px-4 py-4 space-y-3">
        <a href="/" class="block text-gray-700 hover:text-primary font-medium py-2">Home</a>
        <div class="border-t pt-2">
          <div class="text-xs uppercase text-gray-400 mb-2">Services</div>
          {site.services.map(service => (
            <a href={`/${service.slug}/`} class="block text-gray-700 hover:text-primary font-medium py-2 pl-2">{service.name}</a>
          ))}
        </div>
        <a href="/locations/" class="block text-gray-700 hover:text-primary font-medium py-2 border-t pt-3">Areas We Serve</a>
        <a href="/about/" class="block text-gray-700 hover:text-primary font-medium py-2">About Us</a>
        <a href="/contact/" class="block text-gray-700 hover:text-primary font-medium py-2">Contact</a>
        <a href={site.phoneLink} class="flex items-center justify-center gap-3 bg-gradient-to-r from-primary to-primary-dark text-white py-4 rounded-lg font-bold mt-4">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
          Call {site.phone}
        </a>
      </div>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-secondary-dark text-white pt-16 pb-8">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid md:grid-cols-4 gap-10 mb-12">
        <div>
          <div class="flex items-center gap-2 mb-4">
            <div class="w-10 h-10 bg-gradient-to-br from-primary to-primary-dark rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M19 12h-2v3h-3v2h5v-5zM7 9h3V7H5v5h2V9zm14-6H3c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16.01H3V4.99h18v14.02z"/></svg>
            </div>
            <span class="text-xl font-bold">{site.shortName}</span>
          </div>
          <p class="text-gray-400 text-sm mb-4">{site.tagline}</p>
          <div class="flex items-center gap-2 mb-2">
            <span class="text-accent">★★★★★</span>
            <span class="text-sm">{site.stats.rating} Rating</span>
          </div>
          <p class="text-xs text-gray-500">{site.stats.reviewCount} verified reviews</p>
        </div>
        
        <div>
          <h4 class="text-primary text-lg font-semibold mb-4">Our Services</h4>
          <ul class="space-y-2">
            {site.services.map(service => (
              <li><a href={`/${service.slug}/`} class="text-gray-400 hover:text-primary text-sm transition">{service.name}</a></li>
            ))}
          </ul>
        </div>
        
        <div>
          <h4 class="text-primary text-lg font-semibold mb-4">Service Areas</h4>
          <ul class="space-y-2">
            <li><a href="/concrete-contractors-daytona-beach/" class="text-gray-400 hover:text-primary text-sm transition">Daytona Beach</a></li>
            <li><a href="/concrete-contractors-ormond-beach/" class="text-gray-400 hover:text-primary text-sm transition">Ormond Beach</a></li>
            <li><a href="/concrete-contractors-new-smyrna-beach/" class="text-gray-400 hover:text-primary text-sm transition">New Smyrna Beach</a></li>
            <li><a href="/concrete-contractors-deland/" class="text-gray-400 hover:text-primary text-sm transition">DeLand</a></li>
            <li><a href="/concrete-contractors-deltona/" class="text-gray-400 hover:text-primary text-sm transition">Deltona</a></li>
            <li><a href="/locations/" class="text-primary hover:text-primary-light text-sm transition font-medium">View All Locations →</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="text-primary text-lg font-semibold mb-4">Contact Us</h4>
          <div class="space-y-3 text-sm text-gray-400">
            <a href={site.phoneLink} class="flex items-center gap-3 hover:text-primary transition">
              <div class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
              </div>
              <div>
                <div class="font-semibold text-white">{site.phone}</div>
                <div class="text-xs">Call or Text</div>
              </div>
            </a>
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/></svg>
              </div>
              <div>
                <div class="font-semibold text-white">Port Orange, FL</div>
                <div class="text-xs">Serving Volusia County</div>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24"><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg>
              </div>
              <div>
                <div class="font-semibold text-white">{site.hours.display}</div>
                <div class="text-xs">Business Hours</div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
        <p>&copy; {new Date().getFullYear()} {site.name}. All rights reserved.</p>
        <div class="flex gap-4 mt-4 md:mt-0">
          <a href="/privacy/" class="hover:text-primary transition">Privacy Policy</a>
          <a href="/terms/" class="hover:text-primary transition">Terms of Service</a>
          <a href="/sitemap-index.xml" class="hover:text-primary transition">Sitemap</a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Sticky Mobile CTA -->
  <div class="fixed bottom-0 left-0 right-0 bg-gradient-to-r from-primary to-primary-dark p-3 md:hidden z-50 shadow-2xl safe-area-pb">
    <a href={site.phoneLink} class="flex items-center justify-center gap-3 text-white font-bold text-lg">
      <div class="relative">
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
        <span class="absolute -top-1 -right-1 w-3 h-3 bg-accent rounded-full animate-ping"></span>
      </div>
      <span>Tap to Call: {site.phone}</span>
    </a>
  </div>

  <!-- Mobile menu spacer to prevent content being hidden by sticky CTA -->
  <div class="h-16 md:hidden"></div>

  <script>
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    btn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
  </script>
</body>
</html>

<style>
  .safe-area-pb {
    padding-bottom: max(12px, env(safe-area-inset-bottom));
  }
</style>
